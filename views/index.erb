<html>
	<head>
		<title>Sample Web Form</title>
	</head>
	<body>

	<div class="container" style="width: 800px;">

	<% if @messages == nil %>
	 <%= @messages %>
	<% end %>

	<h1 class="text-center">Krijo fotografine tende</h1>
		<form action='/upload' enctype="multipart/form-data" method='POST'>
			<div class="form-group">
				<label for="inputdefault">Emri dhe Mbiemri</label>
				<input class="form-control" name="name" type="text" required>
		  </div>
		  <div class="form-group">
				<label for="inputdefault">Profesioni (student, arkitekt, mjek ...)</label>
				<input class="form-control" name="profession" type="text" required>
		  </div>
		  <div class="form-group">
				<label for="inputlg">Teksti</label>
				<textarea class="form-control" name="text" type="" maxlength="82" required></textarea>
		  </div>
		  <div class="form-group">
				<label for="inputdefault">Kuota</label>
				<input class="form-control" name="quote" type="text" required>
		  </div>
		  <div class="form-group">
				<label for="inputsm">Fotoja</label>
				<input class="form-control input-sm" name="file" type="file" required/>
				<!-- <input class="form-control input-sm" name="image" type="file"> -->
		  </div>
		  <div class="form-group pull-right">
				<input type="submit" value="Krijo foton" class="btn btn-success" width="1000px;">
		  </div>  
		</form>
	</div>

	</body>
</html>

